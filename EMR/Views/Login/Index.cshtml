@model EMRModel.Login.UserModel
@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Index", "Login", null, FormMethod.Post,
                                                                  new { enctype = "multipart/form-data" }))
{
    <div class="login-form">
        <center>
            <span class="alert">@ViewBag.Message</span>
            <h1>Login</h1>
            <div>
                <div class="form-group ">
                    @Html.TextBoxFor(m => m.LoginName, new { @class = "form-control", placeholder = "User Name" })
                    <i class="fa fa-user"></i>
                </div>
                <div class="form-group log-status">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    <i class="fa fa-lock"></i>
                </div>
                
            </div>
                <a class="link" href="#">Lost your password?</a>
                <button type="submit" class="log-btn">Log in</button>
            <p>
                @Html.ActionLink("Register as a new user", "Registrtaion")
            </p>            
        </center>


    </div>
}
